{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "bookmark-homepage@example.com"
    }
  },
  "name": "Bookmark Homepage",
  "version": "1.0",
  "description": "Displays all bookmarks as the homepage.",
  "permissions": [
    "bookmarks",
    "history",
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "bookmarks.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "bookmarks.html",
    "default_icon": {
      "16": "icons/folder-icon.svg",
      "48": "icons/folder-icon.svg",
      "128": "icons/folder-icon.svg"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "icons": {
    "16": "icons/folder-icon.svg",
    "48": "icons/folder-icon.svg",
    "128": "icons/folder-icon.svg"
  }
}
